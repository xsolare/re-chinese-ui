{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "preserve",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,

    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "#S/*": ["./src/style/*"],
      "#C/*": ["./src/components/*"],
      "#H/*": ["./src/hooks/*"]
    }
  },
  "include": ["src", "stories"],
  "exclude": ["./node_modules", "./dist", "./example", "./.storybook"]
}
